<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".IncidentDetails"
    android:background="#fff0f0f5">

    <ImageView
        android:id="@+id/logo_hero"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/logo3x"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/incidents_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Caso:"/>

                <TextView
                    android:id="@+id/text_caso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caso x:"/>
            </LinearLayout>

            <LinearLayout
               android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ONG:"/>

                <TextView
                    android:id="@+id/text_ongname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ONG X:"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição:"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhe descrição:"/>

            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor:"/>

            <TextView
                android:id="@+id/text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor x:"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/call_to_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salve o dia!\nSeja o herói desse caso."/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre em contato"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:background="#e82615"
                android:textColor="#fff"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Whatsapp"
                android:textSize="10sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:background="#e82615"
                android:textColor="#fff"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Email"
                android:textSize="10sp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>